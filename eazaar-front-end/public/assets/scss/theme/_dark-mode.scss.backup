        &:focus {
          border-color: var(--tp-theme-primary) !important;
          box-shadow: 0 0 0 2px rgba(9, 137, 255, 0.1) !important;
        }
        
        &:checked {
          background-color: var(--tp-theme-primary) !important;
          border-color: var(--tp-theme-primary) !important;
        }
      }
      
      .form-check-label {
        color: var(--tp-text-body) !important;
        
        &:hover {
          color: var(--tp-heading-primary) !important;
        }
      }
    }
  }
  
  // Profile picture upload section
  .profile__main-thumb {
    &-edit {
      label {
        background-color: var(--tp-theme-primary) !important;
        color: var(--tp-common-white) !important;
        border: 2px solid var(--tp-surface) !important;
        
        &:hover {
          background-color: var(--tp-heading-primary) !important;
          color: var(--tp-common-white) !important;
        }
      }
    }
  }
  
  // Profile buttons
  .profile__btn {
    .tp-btn {
      background-color: var(--tp-theme-primary) !important;
      color: var(--tp-common-white) !important;
      border: 1px solid var(--tp-theme-primary) !important;
      
      &:hover {
        background-color: var(--tp-theme-secondary) !important;
        border-color: var(--tp-theme-secondary) !important;
        transform: translateY(-1px) !important;
      }
    }
  }
  
  // Profile input wrapper for floating labels
  .tp-profile-input {
    &-box {
      .tp-profile-input-title {
        label {
          color: var(--tp-heading-primary) !important;
          background-color: var(--tp-surface) !important;
        }
      }
      
      &-eye {
        span {
          color: var(--tp-text-3) !important;
          
          &:hover {
            color: var(--tp-heading-primary) !important;
          }
        }
      }
    }
    
    input,
    textarea {
      background-color: var(--tp-input-bg) !important;
      color: var(--tp-input-text) !important;
      border: 1px solid var(--tp-input-border) !important;
      
      &:focus {
        border-color: var(--tp-theme-primary) !important;
        box-shadow: 0 0 0 2px rgba(9, 137, 255, 0.1) !important;
      }
    }
  }
}

// Smooth transitions for all elements
* {
  transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
}